require perl-5 [ perl_cross_ver=1.0.3 ]

DEPENDENCIES+="
    run:
        !dev-lang/perl:5.20[<5.20.3-r1] [[
            description = [ file collisions ]
            resolution = upgrade-blocked-before
        ]]
"

PLATFORMS="~amd64 ~arm ~armv7 ~x86"

DEFAULT_SRC_PREPARE_PATCHES=(
    -p1 "${FILES}"/${PN}-5.11.3-Remove-Syslog-tests.patch
    -p2 "${FILES}"/IO-skip-test.patch
    -p2 "${FILES}"/IO-Socket-IP-skip-tests.patch
)

src_prepare() {
    perl-5_src_prepare

    # TODO: find out why exactly these fail
    edo sed -e '/setpayload + issignaling/d' \
            -e '/issignaling NaN/d' \
            -i ext/POSIX/t/math.t
}

