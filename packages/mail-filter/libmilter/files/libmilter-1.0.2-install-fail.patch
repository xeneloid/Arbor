index 825ddd5..8fa445a 100644
--- a/libmilter/Makefile
+++ b/libmilter/Makefile
@@ -11,7 +11,7 @@ check: FRC
 clean: FRC
 	$(SHELL) $(BUILD) $(OPTIONS) $@
 install: FRC
