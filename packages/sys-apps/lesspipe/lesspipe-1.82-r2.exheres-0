DOWNLOADS="${BASE_URL}/less/${PNV}.tar.gz"

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="hilight [[ description = [
    Enable syntax highlighting for various languages (upstream
    considers this experimental and not recommended)
] ]]"

DEPENDENCIES="
    build:
