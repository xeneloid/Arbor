        # Keep lingering processes (e. g. tmux, screen) after the user logs out
        --without-kill-user-processes
        $(option_enable acl)
        $(option_enable cryptsetup libcryptsetup)
        $(option_enable efi)
        $(option_enable efi gnuefi)
        $(option_enable gcrypt)
        $(option_enable gnutls)
