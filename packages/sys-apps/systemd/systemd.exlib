        --libexecdir=/usr/$(exhost --target)/lib
        --localstatedir=/var
        --enable-backlight
        --enable-binfmt
        --enable-blkid
        --enable-bzip2
        --enable-coredump
        --enable-dbus
        --enable-elfutils
        --enable-firstboot
        --enable-hibernate
        --enable-hostnamed
        --enable-hwdb
        --enable-importd
        --enable-kmod
        --enable-ldconfig
        --enable-localed
        --enable-logind
